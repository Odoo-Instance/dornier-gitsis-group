        	<div class="fb_messenger_chat">
        		<div id="fb-root"></div>
			    <div id="fb-customer-chat" class="fb-customerchat">
			       
			    </div>
        	</div>
        </t>
        
    </t>
    
 	<!-- added div in left side of web control panel for messenger chat-->
