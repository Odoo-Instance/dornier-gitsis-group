<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Design of facebook page placeholder  -->
    <record id="website_config_settings_view_form_facebook_page" model="ir.ui.view">
        <field name="name">website.config.settings.view.form.facebook.page.id</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='google_analytics_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="facebook_page_id_configuration">
					<!-- Left Side Check Box -->
                    <div class="o_setting_left_pane">
                        <field name="website_facebook_page_id"/>
                    </div>
                    <!-- Right Side Details Section -->
                    <div class="o_setting_right_pane">
                        <label for="website_facebook_page_id"/>
                        <span class="fa fa-facebook-square fa-lg" title="Values set here are website-specific." groups="website.group_multi_website"/>
                        <div class="text-muted">
                            Chat with us through Messenger
                        </div>
                        <div class="content-group" attrs="{'invisible': [('website_facebook_page_id', '=', False)]}">
                            <div class="row mt16">
                                <label class="col-lg-3 o_light_label" string="Page ID" for="facebook_page_id"/>
                                <field name="facebook_page_id" placeholder="XXXXXXXXXXXXXXXX"
                                    attrs="{'required': [('website_facebook_page_id', '=', True)]}"/>
                            </div>
                        </div>
                        <!-- Facebook Pixel Configuration Steps : After click the check box shown -->
                        <div attrs="{'invisible': [('website_facebook_page_id', '=', False)]}" name="facebook_page_id_help">
                            <a href="https://www.facebook.com/help/104002523024878" class="oe_link" target="_blank">
                                <i class="fa fa-arrow-right"></i> How to create Facebook Page ID
                            </a>
                        </div>
                        
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
    

</odoo>
