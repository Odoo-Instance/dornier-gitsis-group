<?xml version="1.0"?>
<odoo>
	<data>
		<!--cron scheduler  -->
		<record id="sale_order_due_alert" model="ir.cron" >
            <field name="name">sale.order: due alert</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.email_due_remainder()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
        <!--cron scheduler  -->
        <record id="sale_order_update_hold_customer" model="ir.cron" >
            <field name="name">sale.order: Update Hold Customer</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.update_hold_customer()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
        <!--product update scheduler-->
        <record id="sale_order_product_update" model="ir.cron" >
            <field name="name">sale.order: product update</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.sale_product_update()</field>
            <field name="active" eval="False"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
	</data>
</odoo>