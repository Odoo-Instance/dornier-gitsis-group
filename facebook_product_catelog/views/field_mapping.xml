<?xml version="1.0"?>
<odoo>
	<!-- field mapping design -->
	<record id="awb_field_mapping_tree_view" model="ir.ui.view">
		<field name="name">awb.field.mapping.tree</field>
		<field name="model">awb.field.mapping</field>
		<field name="arch" type="xml">
			<tree string="Field Mapping">
                <field name="name"/>
                <field name="mapping_line_ids"/>
            </tree>
		</field>
	</record>
	<!-- form design -->
	<record id="awb_field_mapping_form_view" model="ir.ui.view">
		<field name="name">awb.field.mapping.form</field>
		<field name="model">awb.field.mapping</field>
		<field name="arch" type="xml">
			<form string="Field Mapping">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group col="4">
                        <field name="active" invisible="1"/>
                        <field name="name"/>
                    </group>
                    <field name="mapping_line_ids">
                        <tree editable="bottom">
                            <field name="fb_field_id" attrs="{'required': True}" options="{'no_open': True, 'no_create': True}"/>
                            <field name="product_model_id" attrs="{'required': [('fixed_f', '!=', True)],'invisible': [('fixed_f', '!=', False)]}" options="{'no_open': True, 'no_create': True}"/>
                            <field name="default_f" attrs="{'invisible': [('fixed_f', '!=', False)]}"/>
                            <field name="fixed_f"/>
                            <field name="fixed_field_text" attrs="{'required': [('fixed_f', '!=', False)],'invisible': [('fixed_f', '!=', True)]}"/>
                        </tree>
                    </field>
                </sheet>
            </form>
		</field>
	</record>
	<!--menu action item  -->
	<record id="action_awb_field_mapping_menu" model="ir.actions.act_window">
	   <field name="name">Facebook Fields Mapping</field>
	   <field name="res_model">awb.field.mapping</field>
	   <field name="view_mode">tree,form</field>
	   <field name="view_id" ref="awb_field_mapping_tree_view"/>
	   <field name="help" type="html">
	       <p class="o_view_nocontent_smiling_face">
	           Generate Field Mapping
	       </p>
	   </field>
	</record>
	<!--menu item  -->
