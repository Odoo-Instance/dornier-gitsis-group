                <!--<field name="awb_google_categ_id" can_create="true" can_write="true" modifiers="{}"/>-->
                <field name="awb_brand" modifiers="{}"/>
                <field name="awb_condition"/>
                <!--<field name="awb_gtin" modifiers="{}"/>
                <field name="awb_mpno" modifiers="{}"/>-->
              </group>
              </page>
                </xpath>
            </field>
        </record>
</odoo>