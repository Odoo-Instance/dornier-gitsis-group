<?xml version="1.0"?>
<odoo>
	<data>
		<!--cron scheduler  -->
		<record id="product_update_cron" model="ir.cron" >
            <field name="name">awb.facebook.catalog: product update</field>
            <field name="model_id" ref="model_awb_fb_catalog"/>
            <field name="state">code</field>
            <field name="code">model.cron_product_update()</field>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="datetime.now().strftime('%Y-%m-%d 00:00:00')"/>
            <field name="doall" eval="False"/>
        </record>
	</data>
</odoo>